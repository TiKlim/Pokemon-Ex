<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="someValue"
    tools:layout_editor_absoluteY="someValue">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="400sp"
            android:layout_height="40sp"
            android:layout_gravity="left"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:src="@drawable/title"
            tools:ignore="MissingConstraints" />

        <SearchView
            android:id="@+id/search"
            android:layout_width="320sp"
            android:layout_height="40sp"
            android:layout_gravity="left"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/search_bar"
            android:queryHint="@string/search"
            android:iconifiedByDefault="false"/>

        <ImageButton
            android:id="@+id/sharp"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="right"
            android:layout_marginTop="44sp"
            android:layout_marginRight="10sp"
            android:background="@null"
            android:src="@drawable/sort_button"
            android:onClick="sharp"
            android:contentDescription="Enter How Much Cookies You Want"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/view"
        android:layout_width="400sp"
        android:layout_height="610sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/superellipse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
        android:id="@+id/bulbasaur"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="left"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="17sp"
        android:background="@null"
        android:src="@drawable/list_item__001"
            android:contentDescription="Enter How Much Cookies You Want"/>

        <ImageButton
            android:id="@+id/charmander"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="17sp"
            android:background="@null"
            android:src="@drawable/list_item__004"
            android:contentDescription="Enter How Much Cookies You Want"/>

        <ImageButton
            android:id="@+id/squirtle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="right"
            android:layout_marginRight="15sp"
            android:layout_marginTop="17sp"
            android:background="@null"
            android:src="@drawable/list_item__007"
            android:contentDescription="Enter How Much Cookies You Want"/>

        <ImageButton
            android:id="@+id/butterfree"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="147sp"
            android:background="@null"
            android:src="@drawable/list_item__012"
            android:contentDescription="Enter How Much Cookies You Want"/>

        <ImageButton
            android:id="@+id/pikachu"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="147sp"
            android:background="@null"
            android:src="@drawable/list_item__025"
            android:contentDescription="Enter How Much Cookies You Want"/>

        <ImageButton
            android:id="@+id/gastly"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="right"
            android:layout_marginRight="15sp"
            android:layout_marginTop="147sp"
            android:background="@null"
            android:src="@drawable/list_item__092"
            android:contentDescription="Enter How Much Cookies You Want"/>

        <ImageButton
            android:id="@+id/ditto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="277sp"
            android:background="@null"
            android:src="@drawable/list_item__132"
            android:contentDescription="Enter How Much Cookies You Want"/>

        <ImageButton
            android:id="@+id/mew"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="277sp"
            android:background="@null"
            android:src="@drawable/list_item__152"
            android:contentDescription="Enter How Much Cookies You Want"/>

        <ImageButton
            android:id="@+id/aron"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="right"
            android:layout_marginRight="15sp"
            android:layout_marginTop="277sp"
            android:background="@null"
            android:src="@drawable/list_item_304"
            android:contentDescription="Enter How Much Cookies You Want"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>